.top-bar {
    position: fixed;
    height: 42px;
    top: 0;
    left: 0;
    right: 0;
    background-color: white;
    z-index: 999;    
}
.empty-selected {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    width: 24px;
    height: 24px;
    margin-left: 10px;
    background-color: #e5e5e5;
    border-radius: 12px;
}
.empty-selected::after {
    position: absolute;
    margin-left: 25px;
    content: '全选';
    font-size: 12px;
    color: #333;
    right: -26px;
    top: 6px;
}
.tool-bar {
    display: flex;
    width: 100%;
    height: 100%;
    flex-flow: row;
    justify-content: space-between;
    align-items: center;
    z-index: 999;
}
.no-empty {
    background-color: #CC0033;
}
.no-empty::before{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom:0;
    margin: auto;
    content: '';
    width: 8px;
    height: 4px;
    border-left: 2px solid white;
    border-bottom: 2px solid white;
    transform: rotate(-45deg)
}
.clean {
    font-size: 14px;
    color: #333;
    padding: 5px 10px;
    border: 1px solid #ddd;
    margin-right: 10px;
    border-radius: 4px;
}
.car-content {
    display: block;
    padding-top: 20px;
    padding-bottom: 40px;
}
.car-item {
    display: flex;
    width: 100%;
    flex-flow: row;
    align-items: center;
    background-color: white;
    border-bottom: 1px solid #eee;  
}
.no-selected {
    position: relative;
    flex-basis: auto;
    height: 24px;
    width: 24px;
    margin-left: 10px;
    margin-right: 10px;
    background-color: #e5e5e5;
    border-radius: 12px;
}
.selected {
    background-color: #CC0033;
}
.selected::before {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom:0;
    margin: auto;
    content: '';
    width: 8px;
    height: 4px;
    border-left: 2px solid white;
    border-bottom: 2px solid white;
    transform: rotate(-45deg)
}
.pro-img {
    width: 60px;
    height: 60px;
    background-size:100%;
    /*background-position: center center;*/
}
.pro-introduce {
    line-height: 13px;
    font-size: 13px;
    color: #333;
}
.pro-price {
    /*display: inline-block;
    vertical-align: middle;    */
    font-size: 12px;
    color: #444;
}
.pro-info {
    flex-basis: auto;
    padding-left: 10px;
    padding-right: 10px;
}
.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 40px;
    background-color: #eee;
    z-index: 999;    
}
.settleAccount {
    display: flex;
    width: 100%;
    height: 100%;
    flex-flow: row;
    justify-content: space-between;
    align-items: center;
}
.amount {
    margin-left: 10px;
    line-height: 1;
    font-size: 14px;
    color: #333;
}
.pay {
    padding: 5px 10px;
    margin-right: 10px;    
    border-radius: 4px;
    background-color: #CC3333;
    color: #eee;
    font-size: 14px;
}