.slide-image {
    display: block;
    width: 100%;
}
.slide-view {
    display: flex;
    height: 60px;
    flex-flow: row nowrap;
}
.slide-item {
    height: 100%;
    display: block;
    width: 100%;
}
.body {
    background-color: #f5f5f5;
}
.classification-title {
    display: block;
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center;
}
.classification-list {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
}
