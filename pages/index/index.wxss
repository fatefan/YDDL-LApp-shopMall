.product {
    display: flex;
    width: 49%;
    margin-bottom: 10px;
    flex-flow: column;
    background-color: white;
}
.product-info {
    padding-bottom: 5px;
}
.product-image{
    max-width: 100%;
    height: 200px;
    background-size: 100%;
}
.product-text{
    height: 33px;
    font-size: 13px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-word;
    color: #232326;
    margin-top: 5px;
    line-height: 17px;
    margin-bottom: 3px;
    padding:0 4px;
}
.product-price {
    display: inline-block;
    vertical-align: middle;
    padding: 0 4px;
    color: #FF3333;
    font-size: 18px;
    width: 40%;
}
.add-myCard {
    display: inline-block;
    vertical-align: middle;
    border: 1px solid #eee;
    border-radius: 4px;
    padding: 5px 10px;
    font-size: 14px;
    color: #666;
}