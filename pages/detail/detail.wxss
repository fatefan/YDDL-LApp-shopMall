.slide-image {
    display: block;
    width: 100%;
    background-size: 100%;
}
.bd-1 {
    border:1px solid #eee;
}
.product-info{
    display: block;
    width: 100%;
    height: auto;
    overflow: hidden;
    padding: 5px;
    border-top: 1px solid #ddd;
    background-color: #fff;
}
.product-introduce {
    display: block;
    padding-right: 5px;    
    margin-bottom: 10px;
    font-size: 14px;
    color: #333;
    line-height: 16px;
}
.product-price {
    display: inline-block;
    vertical-align: middle;
    padding: 0 5px;
    color: #FF3333;
    font-size: 20px;
    width: 40%;
}